    <script>
      (function() {
        const form = document.querySelector('form[action*="web3forms"]');
        const resultDiv = document.getElementById('form-result');
        
        if (!form) return;
        
        form.addEventListener('submit', async function(e) {
          e.preventDefault();
          
          const formData = new FormData(form);
          const submitButton = form.querySelector('button[type="submit"]');
          const originalButtonText = submitButton.textContent;
          
          submitButton.disabled = true;
          submitButton.textContent = 'Sending...';
          resultDiv.classList.add('hidden');
          
          try {
            const response = await fetch('https://api.web3forms.com/submit', {
              method: 'POST',
              body: formData
            });
            
            const data = await response.json();
            
            if (response.ok && data.success) {
              resultDiv.className = 'block mt-4 p-4 rounded-lg text-center font-medium bg-green-50 text-green-800 border border-green-200';
              resultDiv.textContent = 'Thank you! Your message has been sent successfully. We\'ll get back to you soon.';
              form.reset();
            } else {
              resultDiv.className = 'block mt-4 p-4 rounded-lg text-center font-medium bg-red-50 text-red-800 border border-red-200';
              resultDiv.textContent = data.message || 'Something went wrong. Please try again.';
            }
          } catch (error) {
            resultDiv.className = 'block mt-4 p-4 rounded-lg text-center font-medium bg-red-50 text-red-800 border border-red-200';
            resultDiv.textContent = 'Network error. Please check your connection and try again.';
          } finally {
            submitButton.disabled = false;
            submitButton.textContent = originalButtonText;
          }
        });
      })();
    </script>
